{
  "name": "backend",
  "version": "0.0.1",
  "description": "Bank API CRUD application implementing CA.",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "pnpm build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"pnpm build:watch\" \"pnpm start\"",
    "docker:up": "sudo docker-compose up -d",
    "docker:down": "sudo docker-compose down",
    "docker:ps": "sudo docker-compose ps -a",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "pnpm test -- --findRelatedTests",
    "test:ci": "pnpm test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "author": {
    "name": "Radostin Romanov",
    "url": "https://github.com/radromanov"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "env-var": "^7.5.0",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@shelf/jest-postgres": "^1.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.22.7",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "3.3.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2"
  },
  "_moduleAliases": {
    "@domain/*": "dist/domain",
    "@api/*": "dist/api",
    "@application/*": "dist/application",
    "@infrastructure/*": "dist/infrastructure",
    "@utils/*": "dist/utils",
    "@main/*": "dist/main"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
